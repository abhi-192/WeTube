extend layouts/main

block content
    .user-profile
        .user-profile__header
            img.u-avatar(src=user.avatarUrl)
            hd.prodile__username=user.name
    if user.id === loggedUser.id
        .user-profile__btns
            a(href=`/users${routes.editProfile}`)
                button Edit Profile
            a(href=`/users${routes.changePassword}`)
                button Change Password
